#aside
  background-color navy
  color silver
  display flex
  flex-direction column
  position: fixed
  top 0
  left 0
  bottom 0
  z-index 1030
  padding-bottom 3rem

  .profile
    display flex
    flex-direction column
    justify-content center
    align-items center
    flex 1

    .face
      margin-bottom gap

    h2
      margin-bottom 1.5rem

      a
        color: silver

        &:hover
          color: yellow

    .social-links a
      color silver
      display inline-block
      width gap-l
      height gap-l
      border 2px solid currentColor
      border-radius 50%
      font-size 1.25em
      line-height gap-l - 4px
      text-align center
      -webkit-transition: all 0.2s
      -moz-transition: all 0.2s
      -ms-transition: all 0.2s
      -o-transition: all 0.2s
      transition: all 0.2s

      + a
        margin-left gap-s

      &:hover
        color white
        transform scale(1.25)

  @media (max-width xs-screen-max)
    width auto
    padding-top gap-l
    position static

    .lead
      display none

  @media (min-width sm-screen-min) and (max-width sm-screen-max)
    width aside-width * .7

  @media (min-width md-screen-min) and (max-width md-screen-max)
    width aside-width * .8

  @media (min-width lg-screen-min) and (max-width lg-screen-max)
    width aside-width * .9

  @media (min-width xl-screen-min)
    width aside-width