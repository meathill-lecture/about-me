#content
  margin-left 400px
  padding-top gap-l

  h1,h2
    line-height 1.5

  h1
    font-size 2rem

  h2
    font-size 1.6rem
    position relative

    &:before
      content ''
      position absolute
      background-color currentColor
      width 0.3em
      height 0.6em
      top 0.7rem
      left -1.5rem

  hr
    margin-top 1.5rem
    margin-bottom 1.5rem

  .lead
    background-color background-gray
    border 1px solid gray
    border-radius 4px
    padding 1rem

  @media (max-width xs-screen-max)
    margin-left 0